                                var len = msg.ListeNumSerie.length;
                                for (var i = 0; i < len; i++) {

                                    $("#group1").append("<option class='form-control  font-bold text-greenbee'  value='" + data[i].ls_noserie + "'>" + data[i].ls_noserie + "</option>");

                                }
                            }

                            $(document).ready(function () {
                                $('.chosen-select').chosen({ width: "100%" });
