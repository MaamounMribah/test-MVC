                                                                                                <TH>Nombre Demande</TH>
                                                                                            </tr>
                                                                                        </thead>
                                                                                        <tbody>
                                                                                            @foreach (var item8 in grouped8)
                                                                                            {
                                                                                                <tr>
                                                                                                    <td>@item8.PV</td>
                                                                                                    <td>@item8.NombreTotal</td>

                                                                                                </tr>
                                                                                            }

                                                                                        </tbody>
                                                                                    </table>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                    }
                                                                }
                                                            </div>
                                                        </div>

                                                        @*</div>*@

                                                    </div>

                                                </div>

                                                @*</div>*@
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

