                                                                                                    if (grouped8.GetType().GetProperty("Key").GetValue(grouped8) == gd8.Annee)
                                                                                                    {
                                                                                                        <td>  </td>
                                                                                                        <td>  </td>
                                                                                                        <td>  </td>
