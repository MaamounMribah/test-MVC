                                            t = t + 1;
                                        }
                                  }
                         
                            </tr>
                            <tr>
                                <td>Semestrielle</td>
                                @if (ViewBag.ListeTable != null)
                                {
                                    int t = 0;
                                    foreach (var item3 in ViewBag.ListeTable)
                                    {
                                       
                                        <td><input class="form-control col-sm-3 " type="text" value=@item3.ListeSemestriel[t] name="ListeSemestriel" pattern="\d*([,\/]?\d+)" required /> </td>
                                        
                                        t = t + 1;
                                    }
                                }
                             
                            </tr>
                            <tr>
