<div class="row">
    <div class="col-lg-4">
        <div class="widget style1 text-purplebee" style="background-color: #e5e5f5;">
            <div class="row">
                <div class="col-xs-4">
                    <i class="fa fa-window-restore fa-5x"></i>
                </div>
                <div class="col-xs-8 text-right">
                    <h3 class="font-bold"> Articles En stock </h3>
                    <h2 class="font-bold">@ViewBag.stock</h2>
