<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Liste des articles en stock</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("index", "Home")">Acceuil </a>
            </li>
            <li>
                <a href="@Url.Action("ListeStock", "Interne")">Gestion Interne </a>
            </li>
