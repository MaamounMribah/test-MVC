@model BeeProj.Models.B_CLASSEMENT

@{
    ViewBag.Title = "NouvelleAgence";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-8">
        <h2>Modele de classement</h2>
        <ol class="breadcrumb">
            <li>
                <a>Administration</a>
            </li>
            <li>
                <a>Modele de classement</a>
            </li>
            <li class="active">
                <strong>Liste Modèle Classement Commission</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a href='@Url.Action("NouveauClassement","Administration")' class="btn btn-primary btn-xs">Nouveau modèle</a>
                    </div>
                </div>
                <div class="ibox-content">
                   
                    <div class="project-list">

                        <table class="table table-hover">
                            <thead>
                                <th>Intitulé</th>
                                <th>Description</th>
                                <th>Commission de base</th>
                                <th>Commissions d'acquissions</th>
                                <th></th>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.ListeModeleClassement)
                                {
                                <tr>
                                   
                                    <td class="project-title">
                                        <a href="project_detail.html">@item.C_Intitule</a>
                                    </td>
                                    <td >
                                        <h3> @item.C_Description </h3>


                                    </td>


                                    
                                    <td class="project-completion">
                                        <h3>@item.C_Standard %</h3>
                                       

                                    </td>
                                    <td class="project-completion">
                                        <h3>  %</h3>
                                       

                                    </td>
                                    <td class="project-actions">
                                        <a href=@Url.Action("EditClassement/" + @item.cbMarq,"Administration")  class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                                        <a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
