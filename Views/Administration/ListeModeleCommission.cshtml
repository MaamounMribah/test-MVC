<script>

    function SupprimerRegion(cbMarq) {

        $('#delete').modal();

        $("#supprimer").click(function () {


            $.ajax({
                type: "Post",
                url: "/Administration/SupprimerMod?id=" + cbMarq,

                success: function (msg) {
                    window.location = "/Administration/ListeModeleCommission";
                }


            });


        });
    }

    
    
</script>