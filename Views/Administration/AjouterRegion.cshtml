                                            @Html.TextBoxFor(m => m.R_Intitule, new { @class = "form-control", @id = "R_Intitule", @name = "R_Intitule" })
                                            @Html.ValidationMessageFor(model => model.R_Intitule, "", new { @class = "text-warning" })
                                        </div>
                                    </div>
