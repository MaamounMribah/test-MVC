                                        <label class="col-md-4 control-label">Abrege</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(m => m.R_Abrege, new { @class = "form-control", @id = "R_Abrege", @name = "R_Abrege", @maxlength = "3" })
