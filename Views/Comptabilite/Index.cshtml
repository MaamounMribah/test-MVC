
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
<!-- Toastr style -->
<link href="~/css/plugins/toastr/toastr.min.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<link href="~/css/animate.css" rel="stylesheet">
<link href="~/css/style.css" rel="stylesheet">
<style>
    .cardHeight {
        height:100%;
        width: 100%;
    }
    .card-body {
        display: flex;
        flex-direction: column;
    }

</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Comptabilité</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Acceuil</a>
            </li>
            <li>
                <a>Comptabilité</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-4">
            <div class="payment-card">
                <i class="fa fa-file payment-icon-big text-greenbee"></i>
                <h2>
                    Factures
                </h2>
                <div class="row">
                    <div class="col-sm-6">
                        <small>
                            <strong> Factures & Avoirs non comptabilisées:</strong> @ViewBag.TotalFactNonComp
                        </small>
                    </div>
                    <div class="col-sm-6 text-right">
                        <small>
                            <a href=@Url.Action("ComptabiliteFacture", "Comptabilite") class="btn btn-greenbee  btn-outline" title="Comptabiliser"><i class="fa fa-edit"></i> </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="payment-card">
                <i class="fa fa-money payment-icon-big text-success"></i>
                <h2>
                    Réglements
                </h2>
                <div class="row">
                    <div class="col-sm-6">
                        <small>
                            <strong>Règlements & Avances  non comptabilisés:</strong> @ViewBag.TotalRegNonComp
                        </small>
                    </div>
                    <div class="col-sm-6 text-right">
                        <small>
                            <a href=@Url.Action("ComptabiliteReglement", "Comptabilite") class="btn btn-success  btn-outline" title="Comptabiliser"><i class="fa fa-edit"></i> </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="payment-card">
                <i class="fa fa-credit-card payment-icon-big text-danger"></i>
                <h2>
                    Versemements
                </h2>
                <div class="row">
                    <div class="col-sm-6">
                        <small>
                            <strong> Versements non comptabilisés:</strong> @ViewBag.TotalVersNonComp
                        </small>
                    </div>
                    <div class="col-sm-6 text-right">
                        <small>
                            <a href=@Url.Action("ComptabiliteVersement", "Comptabilite") class="btn btn-danger  btn-outline" title="Comptabiliser"><i class="fa fa-edit"></i> </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card cardHeight">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Factures Non Comptabilisées
                            <small>Par date.</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.FactureParDate)
                                {
                                    <tr>
                                        <td>@item.Date</td>
                                        <td> <strong>@item.Count</strong> Factures</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card cardHeight">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Réglements Non Comptabilisés
                            <small>Par date.</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @foreach (var item in ViewBag.RegParDate)
                                {
                                    <tr>
                                        <td>@item.Date</td>
                                        <td> <strong>@item.Count</strong> Réglements</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card cardHeight">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Versements Non Comptabilisés
                            <small>Par date.</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.VersementParDate)
                                {
                                    <tr>
                                        <td>@item.Date</td>
                                        <td> <strong>@item.Count</strong> Bordereaux</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Avoirs Non Comptabilisées
                            <small>Par date.</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.AvoirParDate)
                                {
                                    <tr>
                                        <td>@item.Date</td>
                                        <td> <strong>@item.Count</strong> Avoirs</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Avances Non Comptabilisés
                            <small>Par date.</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.RegAvanceParDate)
                                {
                                <tr>
                                    <td>@item.Date</td>
                                    <td> <strong>@item.Count</strong> Avances</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
