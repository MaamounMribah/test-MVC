@model IdentitySample.Models.ApplicationGroup
@{
    ViewBag.Title = "Creation d'un nouveau Groupe";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Profile</h2>
        <ol class="breadcrumb">
            <li>
                <a>Acceuil </a>
            </li>
            <li>
                <a href="@Url.Action("index","Administration")">Administration</a>
            </li>
            <li class="active">
                <strong>Nouveau rôle utilisateur</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">

        <div class="ibox">
            <div class="ibox-content">

                <div class="row">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal center-block">


                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <label class="control-label col-md-2">Libellé</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                                <div class="form-group modal-footer">
                                    <div class="col-md-offset-2 col-md-10">
                                        @Html.ActionLink("Retourner", "Index", null, new { @class = "btn btn-default" })
                                        <input type="submit" value="Enregister" class="btn btn-danger" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
</div>
<script src="~/js/jquery-3.1.1.min.js"></script>
