    <div class="col-lg-2">
    </div>
</div>

<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Liste des Stocks</h5>
                    <div class="project-actions">
                        <a href=@Url.Action("NewStock","Listes") class="btn btn-sm btn-rounded bg-info ">
                            <i class="fa "></i> Ajouter un article au stock
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="Stocks">
                            <thead>
                                <tr>
                                    <th>Code Article</th>
                                    <th>Intitulé</th>
                                    <th>N° de série</th>
                                    <th>Quantité</th> 
                                    <th>Affecté à</th>  
                                    <th>Dépot</th>    
                                    <th>Image</th>                       
                                    <th>Modifier </th>
                                    <th>supprimer</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/plugins/dataTables/datatables.min.js"></script>
<script src="~/js/jquery-3.1.1.min.js"></script>
