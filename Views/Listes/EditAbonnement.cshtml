@model BeeProj.Models.C_ABONNEMENT


<div class="ibox">
    <div class="ibox-content">

        @using (Html.BeginForm("SaveAbonnement", "Listes", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Profile</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("index","Home")">Acceuil </a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("index","Administration")">Administration</a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("ListeAbonnements","Listes")">Liste des Abonnements</a>
                        </li>

                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="form-horizontal">
                <h4>Modifier Abonnement</h4>
                <hr />


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-sm-2 control-label">Type</label>

                    <div class="col-sm-10">
                        <span class="help-block m-b-none">
                            @Html.TextBoxFor(model => model.A_Type, new { @id = "type", @class = "form-control" })

                        </span>
                    </div>
                </div>
                @Html.HiddenFor(model => model.cbMarq)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-sm-2 control-label">Prix Unitaire</label>

                    <div class="col-sm-10">
                        <span class="help-block m-b-none">
                            @Html.TextBoxFor(model => model.A_PU, new { @id = "type", @class = "form-control" })

                        </span>
                    </div>
                </div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-sm-2 control-label">Description</label>

                    <div class="col-sm-10">
                        <span class="help-block m-b-none">
                            @Html.TextBoxFor(model => model.A_Description, new { @id = "type", @class = "form-control" })

                        </span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" onclick="SaveAbonnement(model.cbMarq)" value="Sauvegarder" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }


    </div>
</div>