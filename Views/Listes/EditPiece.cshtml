@model BeeProj.Models.C_PIECE


<div class="ibox">
    <div class="ibox-content">

        @using (Html.BeginForm("SavePiece", "Listes", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Profile</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("index","Home")">Acceuil </a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("index","Administration")">Administration</a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("ListePieces","Listes")">Liste des Pièces</a>
                        </li>

                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="form-horizontal">
                <h4>Modifier Piece</h4>
                <hr />


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-sm-2 control-label">Type Pièce</label>

                    <div class="col-sm-10">
                        <span class="help-block m-b-none">
                            @Html.TextBoxFor(model => model.P_Type, new { @id = "type", @class = "form-control" })

                        </span>
                    </div>
                </div>
                @Html.HiddenFor(model => model.cbMarq)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-sm-2 control-label">Longueur Pièce</label>

                    <div class="col-sm-10">
                        <span class="help-block m-b-none">
                            @Html.TextBoxFor(model => model.P_Longueur, new { @id = "type", @class = "form-control" })

                        </span>
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" onclick="SavePiece(model.cbMarq)" value="Sauvegarder" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
        }


    </div>
</div>


