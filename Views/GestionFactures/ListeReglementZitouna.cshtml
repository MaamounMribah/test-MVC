@model IEnumerable<BeeProj.ViewModels.ListeReglementZitouna1>
@{
    ViewBag.Title = "ListeReglementZitouna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Liste des réglements Zitouna</h5>
                    <div class="project-actions">
                    </div>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example display" id="ListeMigrationss">
                        <thead>
                            <tr>
                                <th> Piece Réglement </th>
                                <th> N° Transaction </th>
                                <th> Code Client </th>
                                <th>Telephone</th>
                                <th> Intitule Client </th>
                                <th> N° Facture  </th>
                                <th> Montant  </th>
                                <th> Date </th>
                            </tr>
                        </thead>                      
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="gradeX">

                                <td>@item.DO_Piece</td>
                                <td>@item.Num_Transaction</td>
                                <td>@item.DO_Tiers</td>
                                <td>@item.NumFixe</td>
                                <td>@item.CT_Intitule</td>
                                <td>@item.NumFacture</td>
                                <td>
                                    @if (item.DO_MontantTTC != null)
                                    {
                                        @String.Format("{0:N3}", item.DO_MontantTTC)
                                    }
                                    else
                                    {
                                        <span>0</span>
                                    }
                                </td>
                                <td>@item.DO_Date.GetValueOrDefault().ToString("dd/MM/yyyy")</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/jquery-3.1.1.min.js"></script>
<script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="~/js/plugins/pace/pace.min.js"></script>
<script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/js/plugins/chosen/chosen.jquery.js"></script>
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<script>
    $(document).ready(function () {


        $('#ListeMigrationss').DataTable({


            responsive: true,
            order: false,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },
                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]
        });

    });
</script>
