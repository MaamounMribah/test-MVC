@model IEnumerable<BeeProj.Models.DetailsFactures>
@{
    ViewBag.Title = "InterrogationListeFactures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<!-- Sweet Alert -->
<link href="~/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Liste des Factures</h2>
        <ol class="breadcrumb">
            <li>
                <a href=@Url.Action("Index","Home")>Acceuil</a>
            </li>
            <li>
                <a href=@Url.Action("ListeFacture", "GestionFactures")>Gestion des Factures</a>
            </li>
            <li class="active">
                <strong>Liste des Factures</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Informations sur les abonnements</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="listeAbo">
                            <thead>
                                <tr>
                                    <th>N_Facture</th>
                                    <th>DateFacture</th>
                                    <th>debut_Periode</th>
                                    <th>fin_Periode</th>
                                    <th>Reftt_Abonnement</th>
                                    <th>Intitule_Client</th>
                                    <th>Nombre de mois</th>
                                    <th>Total_HT</th>
                                    <th>Total_TTC</th>
                                    <th>Débours </th>
                                    <th>Total_TVA</th>
                                    <th>Remise</th>
                                    <th>DO_TotalHTAvantR</th>
                                    <th>DO_TotalHTApresR</th>
                                    <th>Article_PAck</th>
                                    <th>DL_PrixUnitaire_Article_PAck</th>
                                    <th>Utilisateur_Facture</th>
                                    <th>N_Reglement</th>
                                    <th>Utilisateur_Reglement</th>
                                    <th>Date_Reglement</th>
                                    <th>Piece_Versement</th>
                                    <th>Date_Versement</th>
                                    <th>Utilisateur_Versement</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.NFacture</td>
                                        <td> @item.DateFacture</td>
                                        <td> @item.debut_Periode</td>
                                        <td> @item.fin_Periode</td>
                                        <td> @item.Reftt_Abonnement</td>
                                        <td> @item.Intitule_Client</td>
                                        <td> @item.AB_FrequenceFacture</td>
                                        <td> @String.Format("{0:N6}", item.Total_HT)</td>
                                        <td> @String.Format("{0:N6}", item.Total_TTC)</td>
                                        <td> @String.Format("{0:N6}", item.Frais_Installation)</td>
                                        <td> @String.Format("{0:N6}", item.Total_TVA)</td>
                                        <td> @item.Remise</td>
                                        <td> @String.Format("{0:N6}", item.DO_TotalHTAvantR)</td>
                                        <td> @String.Format("{0:N6}", item.DO_TotalHTApresR)</td>
                                        <td> @item.Article_PAck</td>
                                        <td> @String.Format("{0:N6}", item.DL_PrixUnitaire_Article_PAck) </td>
                                        <td> @item.Utilisateur_Facture</td>
                                        <td> @item.N_Reglement</td>
                                        <td> @item.Utilisateur_Reglement</td>
                                        <td> @item.Date_Reglement</td>
                                        <td> @item.Piece_Versement</td>
                                        <td> @item.Date_Versement</td>
                                        <td> @item.Utilisateur_Versement</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="~/js/jquery-3.1.1.min.js"></script>
<script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="~/js/plugins/pace/pace.min.js"></script>
<script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/js/plugins/chosen/chosen.jquery.js"></script>
<script src="~/js/plugins/dataTables/datatables.min.js"></script>
<!-- Sweet alert -->
<script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
<script>
    $(function () {

        $('.dataTables-example').DataTable({
            pageLength: 15,
            "order": [[1, "desc"]],
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ]

        });
    });
</script>