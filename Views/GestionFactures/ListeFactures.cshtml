                                                    <tr>
                                                        <td>
                                                            <span class="label bg-greenbee">Non payé </span>
                                                        </td>
                                                        <td>
                                                            @item.DO_Piece
                                                        </td>

                                                        <td>
                                                            @item.CT_Intitule
                                                        </td>

                                                        <td>
                                                            @item.CT_Telephone
                                                        </td>

                                                        <td>
                                                            @item.CT_Identifiant
                                                        </td>

                                                        <td>
                                                            @item.DO_Date.ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td>
                                                            @String.Format("{0:N3}", (decimal)(item.TotalTTC /*+ (decimal)0.600*/))
