<div class="col-lg-4">
    <div class="widget style1 bg-graybee">
        <div class="row">
            <div class="col-xs-4">
                <i class="fa fa-window-close fa-5x"></i>
            </div>
            <div class="col-xs-8 text-right">
                <h3 class="font-bold"> Non commissionnées </h3>
                <h2 class="font-bold">@ViewBag.nonComm</h2>

            </div>
        </div>
