                                                <th data-hide="phone,tablet">Montant Total </th>
                                                <th>Référence Abonnement </th>
                                                <th>Agence </th>
                                                <th width="10px"></th>
                                                <th width="10px"></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.factureClientNONPAYE.Count == 0)
                                            {
                                                <p>Aucune facture  </p>
                                            }
                                            else
                                            {
                                                foreach (var item in ViewBag.factureClientNONPAYE)
