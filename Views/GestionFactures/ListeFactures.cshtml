                                                               href="@Url.Action("VisualiserFacture","GestionFactures", new { id = item.SG_CodeFacture })" target="_blank">
                                                                <i title="Imprimer Facture " class="fa fa-print"></i>
                                                            </a>
                                                            <a class="btn btn-greenbee btn-circle btn-outline" title="voir le reçu de paiement "
                                                               href="@Url.Action("RecuPaiementFacture","GestionFactures", new { id = item.SG_CodeFacture })" target="_blank">
                                                                <i title="Imprimer Reçu " class="fa fa-print"></i>
                                                            </a>
                                                        </td>


                                                        @*<ul class="nav navbar-top-links navbar-right">
                                                                <li class="dropdown">
                                                                    @{ Html.RenderAction("ModeReglementsFacture", "GestionFactures", new { id = item.cbMarq }); }
                                                                </li>
                                                            </ul>*@
                                                        @*<td class="text-right">
                                                                <div class="btn-group">
                                                                    <button class="btn-white btn btn-xs">View</button>
                                                                    <button class="btn-white btn btn-xs">Edit</button>
                                                                </div>
                                                            </td>*@

                                                    </tr>

                                                }
                                            }

                                    </table>
                                </div>
                            </div>
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">

                                    <table class="table table-striped table-bordered table-hover dataTables-example2" id="ListeFacturesVersee">
                                        <thead>
                                            <tr>
                                                <th data-toggle="true"> N° Facture</th>
                                                <th data-toggle="true"> N° Règlement</th>
                                                <th data-hide="phone">Référence Abonnement</th>
                                                <th data-hide="all">Client</th>
                                                <th data-hide="phone,tablet">Date Versement</th>
                                                <th> Agence</th>
                                                <th data-hide="phone">Montant Facture</th>
                                                <th width="10px"></th>
                                                <th></th>
                                                @*<th class="text-right" data-sort-ignore="true">Action</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.factureClientVersees.Count == 0)
                                            {
                                                <p>Aucune facture  </p>
                                            }
                                            else
                                            {
                                                foreach (var item in ViewBag.factureClientVersees)
                                                {
                                                    <tr>

                                                        <td>
                                                            @item.DO_Piece
                                                        </td>

                                                        <td>
                                                            @item.RG_Piece
                                                        </td>

                                                        <td>
                                                            @item.Ref_TTAbonnement
                                                        </td>
                                                        <td>
                                                            @item.CT_Intitule
                                                        </td>
                                                        <td>
                                                            @item.DO_DateVersement.ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td>
                                                            @item.A_Intitule
                                                        </td>
                                                        <td>
                                                            @String.Format("{0:N3}", item.TotalTTC)
                                                        </td>
                                                        <td>

                                                            <a class="btn btn-greenbee  btn-outline" title="voir la facture"
                                                               href="@Url.Action("DetailsVersement","GestionFactures", new { id = item.cbMarq })" target="_blank">
