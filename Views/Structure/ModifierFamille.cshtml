@model BeeProj.Models.D_FAMILLE
@{
    ViewBag.Title = "ModifierFamille";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="ibox-content">

        <h3>Modification Famille:  Ref# @Model.FA_CodeFamille</h3>

        <ol class="breadcrumb">

            <li>
                <a href="@Url.Action("index","Home")">Acceuil </a>
            </li>
            <li>
                <a href=@Url.Action("ListeFamilles", "Structure")>Liste des familles</a>
            </li>

            <li class="active">
                <a href=@Url.Action("DetailsFamille", "Structure")>Details Famille</a>
            </li>
            <li class="active">
                <strong>Modifier </strong>
            </li>
        </ol>
    </div>
</div>






@using (Html.BeginForm("ModifierFamille", "Structure", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="wrapper wrapper-content">
        @Html.HiddenFor(model => model.cbMarq)

        <div class="row m-t-md">
            <div class="col-lg-12">

                <div class="ibox product-detail">
                    <div class="ibox-content">

                        <div class="row">
                            <div class="col-md-5">


                                <div class="product-images">

                                    <div>
                                        <img src="@Url.Action("PhotoFamille", "Structure" , new { id= Model.cbMarq })" class="img-preview img-responsive img-rounded" onError="this.onerror=null;this.src='/img/DefaultImage.png';" />

                                            <div class="">
                                                <input type="file" name="Path" id="Path" accept=".png,.jpg,.jpeg,.gif,.tif" />
                                            </div>


                                        </div>


                                </div>

                            </div>
                            <div class="col-md-7">

                                <h2 class="font-bold m-b-xs">
                                    La famille Ref# @Model.FA_CodeFamille
                                </h2>
                                @*<small>@Model.FA_Description</small>*@
                                <h3>Détails de la famille</h3>
                                <div class="ibox-content">
                                    <form method="get" class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Désignation</label>

                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.FA_Intitule, new { @id = "FA_Intitule", @name= "FA_Intitule", @class = "form-control" })
                                            </div>
                                        </div>

                                        @*<div class="form-group">
                                            <label class="col-sm-2 control-label">Code ERP</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.FA_CodeERP, new { @id = "FA_CodeERP", @name= "FA_CodeERP", @class = "form-control" })
                                            </div>
                                        </div>*@


                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Type</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(m => m.FA_Type, new List<SelectListItem>()
                                                         {
                                                                new SelectListItem(){ Text= "Service", Value = "1"},
                                                                new SelectListItem(){ Text= "Matériel", Value = "0"},

                                                             }, new { @id = "FA_Type", @name= "FA_Type", @class = "form-control bg-white chosen-select" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Description</label>
                                            <div class="col-sm-10">
                                                @Html.TextAreaFor(m => m.FA_Description, new { id = "FA_Description", @name= "FA_Description", @class = "form-control" })
                                            </div>
                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                        <div class="pull-right">
                            <div class="btn-group">
                                <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-save"></i> Sauvgader</button>
                                @*<button class="btn btn-primary btn-sm"><i class="fa fa-cart-plus"></i> Modifier</button>*@
                                @*<button class="btn btn-white btn-sm"><i class="fa fa-star"></i> Mettre en Someil </button>*@
                                <button class="btn btn-white btn-sm"><i class="fa fa-trash"></i> Supprimer </button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        </div>
}

        <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>

        <script src="~/js/jquery-3.1.1.min.js"></script>



