@model IdentitySample.Models.UserProfileEdit
@using Microsoft.AspNet.Identity
<div class="ibox-heading">
    <div class="ibox-content">
        <h2>Edit Profile</h2>
    </div>
</div>
    <style>
        .profile-img {
            text-align: center;
        }

            .profile-img img {
                width: 70%;
                height: 100%;
            }

            .profile-img .file {
                position: relative;
                overflow: hidden;
                margin-top: auto;
                margin-right: -0%;
                width: 70%;
                height: 20%;
                border: none;
                border-radius: 0;
                font-size: 20px;
                background: #212529b8;
            }

                .profile-img .file input {
                    position: absolute;
                    opacity: 0;
                    right: 0;
                    top: 0;
                }
    </style>
   

        @if (Request.IsAuthenticated)
        {
        using (Html.BeginForm("Edit", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close " data-dismiss="alert"> × </button>
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                </div>
            }
            <div class="wrapper wrapper-content">
                <div class="row animated fadeInRight">
                    <div class="col-md-4">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5><strong> Profile </strong></h5>
                            </div>
                            <div>
                                <div class="ibox-content no-padding border-left-right">
                                    <div class="profile-img">
                                        @*<img src="img/a4.jpg" class="img-circle circle-border m-b-md" alt="profile">*@
                                        <img src="@Url.Action("Photo", "Account", new { UserId = User.Identity.GetUserId() })" class="img-shadow" alt="profile" />
                                        <div class="file btn btn-lg btn-primary">
                                            Changer

                                            <input type="file" name="ProfileImage" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                                        </div>
                                    </div>
                                </div>
                                   

                                    <div class="ibox-content profile-content">
                                        <h4><strong>@User.Identity.GetUserName()</strong></h4>
                                        <p><i class="fa fa-map-marker"></i> @ViewBag.Lieu</p>
                                        <div class="row m-t-lg">
                                            <div class="col-md-6">
                                                <h5><strong>Agence : </strong></h5>
                                                <h5>@ViewBag.AG </h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5><strong>Dépot Principale : </strong></h5>
                                                <h5>@ViewBag.DepotPrinciple</h5>
                                            </div>
                                        </div>
                                        
                                    </div>




                                </div>
                        </div>
                    </div>
                  
                        
                            <div class="col-md-8 form-group">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5> <strong>Déscription</strong></h5>

                                    </div>
                                    <div class="ibox-content">

                                        <div>
                                            <div class="feed-activity-list">
                                                <br />
                                                <br />

                                               

                                                <div class="feed-element">
                                                    <div class="media-body ">
                                                        <div class="media-body ">
                                                            <label class="col-xs-3 ">Prénom :</label>
                                                            <div class="col-xs-5 controls">
                                                                <input class="form-control" type="text" name="FirstName" id="FirstName" value="@ViewBag.prenom">
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="feed-element">
                                                    <div class="media-body ">
                                                        <div class="media-body ">
                                                            <label class="col-xs-3 ">Nom :</label>
                                                            <div class="col-xs-5 controls">
                                                                <input class="form-control" type="text" name="LastName" id="LastName" value="@ViewBag.nom">
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="feed-element">
                                                    <div class="media-body ">
                                                        <div class="media-body ">
                                                            <label class="col-xs-3 ">Adresse :</label>
                                                            <div class="col-xs-5 controls">
                                                                <input class="form-control" type="text" name="Address" id="Address" value="@ViewBag.Adresse">
                                                            </div>
                                                         </div>
                                                    </div>
                                                   
                                                </div>
                                                <div class="feed-element">

                                                    <div class="media-body ">
                                                        <div class="media-body ">
                                                            <label class="col-xs-3 ">Téléphone :</label>
                                                            <div class="col-xs-5 controls">
                                                                <input class="form-control" type="text" name="Phone" id="Phone" value="@ViewBag.Telephone">
                                                            </div>
                                                                @*<div class="col-xs-8 controls">@ViewBag.Telephone </div>

                                                            </div>*@
                                                    </div>
                                                </div>
                                               </div>
                                                <div class="feed-element">

                                                    <div class="media-body ">
                                                        <label class="col-xs-3">E-mail :</label>
                                                        <div class="col-xs-5 controls">
                                                            <input class="form-control" type="text" name="Email" id="Email" value="@ViewBag.email">
                                                        </div>
                                                       
                                                       
                                                </div>



                                            </div>
                                            <br />
                                            <br />

                                            <button class="btn btn-primary btn-block m" type="submit"><i class="fa fa-save"></i> Sauvgarder les modifications</button>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        
                  
                </div>

            </div>
</div>
        }}


        <script src="~/js/plugins/sparkline/jquery.sparkline.min.js"></script>



        <script src="~/Scripts/jquery-1.10.2.min.js"></script>


        <script src="~/js/plugins/dataTables/datatables.min.js"></script>
        <script src="~/js/jquery-3.1.1.min.js"></script>
        <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <script src="~/js/plugins/dataTables/datatables.min.js"></script>

        <script src="~/js/accounting.js"></script>
        <script src="~/js/accounting.min.js"></script>

    <!-- Chosen -->
        <script src="~/js/plugins/chosen/chosen.jquery.js"></script>
    <!-- Sweet alert -->
        <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
    }

