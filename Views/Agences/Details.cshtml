                                                                    <div class="col-md-8">
                                                                        <input id="A_RaisonSociale" name="A_RaisonSociale" class="form-control" value="@Model.A_RaisonSociale" disabled />
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="col-lg-6">
                                                        <div class="ibox">

                                                            <div class="ibox-content">

                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">Adresse agence</label>
