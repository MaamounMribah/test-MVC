@if (TempData["MSG"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close " data-dismiss="alert"> × </button>
        <p class="text-success">@TempData["MSG"]</p>
    </div>

}
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Correction </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <a href="@Url.Action("DecalageFacture", "Correction")">
                    <div class="col-md-6">
                        <div class="widget bg-purplebee p-lg text-center">

                            <div class="m-b-md">
                                <i class="fa fa-file-o fa-4x"></i>
                                <br /><br />
                                <h1 class="m-xs" id="countFam">Décalage Facture</h1>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("ModeReglement", "Correction")">
                    <div class="col-md-6">
                        <div class="widget bg-purplebee p-lg text-center">
                            <div class="m-b-md">
                                <i class="fa fa-dollar fa-4x"></i>
                                <br /><br />
                                <h1 class="m-xs" id="countArt">Mode Réglement</h1>
                                <br />


                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("SupprimerReglement", "Correction")">
                    <div class="col-md-6 ">
                        <div class="widget bg-purplebee p-lg text-center">

                            <div class="m-b-md">
                                <i class="fa fa-remove fa-4x"></i>

                                <br /><br />
                                <h1 class="m-xs" id="countFam">Suppression Règlement</h1>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("ReaffecterReglement", "Correction")">
                    <div class="col-md-6">
                        <div class="widget bg-purplebee p-lg text-center">
                            <div class="m-b-md">
                                <i class="fa fa-exchange fa-4x"></i>
                                <br /><br />
                                <h1 class="m-xs" id="countFam">Réaffectation de règlement</h1>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("ModifierReglement", "Correction")">
                    <div class="col-md-6 disabled">
                        <div class="widget bg-purplebee p-lg text-center">

                            <div class="m-b-md">
                                <i class="fa fa-edit fa-4x"></i>

                                <br /><br />
                                <h1 class="m-xs" id="countFam">Modification Règlement</h1>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
                <a title="Taux remise web" data-toggle="modal" data-target="#Tauxremise">
                    <div class="col-md-6">
                        <div class="widget bg-purplebee p-lg text-center">

                            <div class="m-b-md">
                                <i class="fa fa-gears fa-4x"></i>

                                <br /><br />
                                <h1 class="m-xs" id="countFam">Paiement Web</h1>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
                @*<a class="btn btn-purplebee  dim" title="Imprimer Facture" data-toggle="modal" data-target="#Tauxremise">
                        <div class="col-md-6 disabled">
                            <div class="widget bg-purplebee p-lg text-center">

                                <div class="m-b-md">
                                    <i class="fa fa-gears fa-4x"></i>
                                    <input type="text" pattern="\d*([,\/]?\d+)" class="form-control" id="Tauxremise" value="@ViewBag.Tauxremise">
                                    <br /><br />
                                    <h1 class="m-xs" id="countFam">Paiement Web</h1>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </a>*@
            </div>

        </div>
    </div>
</div>
<div class="modal inmodal" id="Tauxremise" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                <h4 class="modal-title">Taux  remise web</h4>
            </div>
            @using (Html.BeginForm("Index", "Correction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Taux remise Web </label>
                            <div class="col-sm-8">
                                <input type="text" pattern="\d*([,\/]?\d+)" class="form-control" name="Tauxremise" id="Tauxremise" value="@String.Format("{0:N2}", ViewBag.Tauxremise) ">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-greenbee ladda-button">Valider </button>
                    <button type="button" class="btn btn-purplebee" data-dismiss="modal">Fermer</button>
                </div>
            }
        </div>

    </div>
</div>

